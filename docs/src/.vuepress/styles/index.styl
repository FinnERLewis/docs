*
  box-sizing border-box

body
  font-family 'Inter', sans-serif
  letter-spacing -0.02em

.home .hero img
  max-width 450px!important

.sidebar-heading
  text-transform capitalize

.published
  opacity 0.8
  margin-bottom 24px

.blog-card
  margin-bottom 80px

.custom-block.details
  background-color white
  border 2px solid #a5b0ca
  padding 1em 1.6em

  &:hover, &[open]
    border-color #415074

  summary
    padding: 0.6em 0

.custom-block.details summary
  &:focus
    outline auto

.theme-default-content code
  background-color #f7f7f7

body .navbar
  .home-link
    font-size 28px
    position relative
    white-space nowrap
    .brand
      font-weight 700
    .site
      font-weight 400
  .nav-link
    font-size 16px
    font-weight bold
  .repo-link
    font-size 16px
    font-weight bold
